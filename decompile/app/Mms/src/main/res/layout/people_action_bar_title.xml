<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
    <LinearLayout android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/mms_main_text_size" android:textColor="@color/text_color_white_important" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="210dp" android:singleLine="true" android:layout_weight="1.0" />
        <ImageView android:id="@+id/icon_weichat" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mms_ic_wechat_little" android:layout_marginStart="@dimen/mms_main_image_margin_start" />
        <ImageView android:id="@+id/icon_whatsapp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mms_ic_whatsapp_little" android:layout_marginStart="@dimen/mms_main_image_margin_start" />
        <LinearLayout android:orientation="vertical" android:id="@+id/composing" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="2dp" android:layout_marginEnd="5dp">
            <ImageView android:id="@+id/composing_pen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/rcs_composing_pen" />
            <ImageView android:id="@+id/composing_paper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-13dp" android:src="@drawable/rcs_composing_paper" />
        </LinearLayout>
        <TextView android:textSize="@dimen/mms_main_text_size" android:textColor="@color/title_color_primary_dark" android:id="@+id/group_member_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="6dp" />
        <ImageView android:id="@+id/icon_groupchat_notify_silent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_rcs_group_not_disturb_small" android:layout_marginStart="6dp" />
    </LinearLayout>
</LinearLayout>
