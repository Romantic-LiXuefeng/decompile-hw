    <TextView android:textSize="13dp" android:textColor="@color/emui_list_secondray_text" android:id="@+id/gb_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:layout_alignBottom="@+id/memory_used" android:layout_marginStart="4dp" android:layout_toEndOf="@+id/memory_used" />
