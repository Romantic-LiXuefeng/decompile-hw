<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="13dp" android:textColor="@color/space_manager_internal_text" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/space_clean_phone" android:layout_alignParentTop="true" android:textAllCaps="true" />
    <TextView android:textSize="30dp" android:textColor="@color/emui_list_primary_text" android:id="@+id/memory_used" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:layout_marginBottom="-8dp" android:layout_below="@+id/name" />
