<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" style="@style/dialog_padding_style"
    <LinearLayout android:orientation="vertical" android:id="@+id/msg_summary_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="16dp">
        <TextView android:textSize="15sp" android:textColor="@color/emui_list_primary_text" android:id="@+id/textview_size" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/harassment_mms_size" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" />
        <TextView android:textSize="15sp" android:textColor="@color/emui_list_primary_text" android:id="@+id/textview_expdate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/harassment_mms_expiredate" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" />
    </LinearLayout>
    <TextView android:scrollbarStyle="outsideInset" android:textSize="15sp" android:textColor="@color/emui_list_primary_text" android:ellipsize="end" android:id="@+id/msg_body" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="3" android:lineSpacingMultiplier="1.3" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" />
    <ViewStub android:id="@+id/rcs_ft_body_stub" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="12dp" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" />
    <Button android:id="@+id/btn_restore_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/harassmentInterceptionMenuRecover" android:singleLine="true" />
    <Button android:id="@+id/btn_add_whitelist" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/harassmentAddIntoWhitelist" android:singleLine="true" />
    <Button android:textColor="0x1060016" android:id="@+id/btn_delete" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="12dp" android:text="@string/harassmentInterceptionMenuDelete" android:singleLine="true" />
</LinearLayout>
