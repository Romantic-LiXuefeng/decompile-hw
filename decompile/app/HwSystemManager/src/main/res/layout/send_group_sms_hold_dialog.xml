<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/dialog_layout" android:paddingTop="5dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="15dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/hold_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="5dp" android:layout_marginEnd="5dp">
        <TextView android:textSize="13dp" android:textColor="@color/emui_list_primary_text" android:ellipsize="end" android:id="@+id/tv_hold_dialog_warning_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:maxLines="4" />
        <TextView android:textSize="13dp" android:textColor="@color/emui_list_primary_text" android:id="@+id/tv_sms_content" android:visibility="gone" android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="4" />
        <TextView android:textSize="13dp" android:textColor="@color/emui_list_primary_text" android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/tv_hold_dialog_tip_new" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/hold_content" android:paddingStart="5dp" android:paddingEnd="5dp">
        <Button android:id="@+id/btn_forbbid" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/forbidden" android:layout_weight="1.0" />
        <Button android:id="@+id/btn_allow" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/permit" android:layout_weight="1.0" />
    </LinearLayout>
</RelativeLayout>
